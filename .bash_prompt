#!/bin/bash

# BASH PROMPT

# colors
black="\e[1;30m"
blue="\e[1;34m"
cyan="\e[1;36m"
green="\e[1;32m"
orange="\e[1;33m"
purple="\e[1;35m"
red="\e[1;31m"
white="\e[1;37m"
yellow="\e[1;33m"
reset="\e[0m"

# set terminal tite (full working directory)
PS1="\[\033]0;\w\007\]"

# set prompt
PS1+="\[$orange\]\u " #user
PS1+="\[$red\]at " #at
PS1+="\[$white\]\h " #host
PS1+="\[$red\]in " #in
PS1+="\[$white\]\w" #working directory
PS1+="\n" #newline
PS1+="$ \[$reset\]" #'$' prompt
export PS1
