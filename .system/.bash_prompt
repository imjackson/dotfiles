
# BASH PROMPT

# colors
black="\e[1;30m"
blue="\e[1;34m"
cyan="\e[1;36m"
green="\e[1;32m"
orange="\e[1;33m"
purple="\e[1;35m"
red="\e[1;31m"
white="\e[1;37m"
yellow="\e[1;33m"
reset="\e[0m"

get_git_branch() {
    git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}

# set terminal title (full working directory)
PS1="\[\033]0;\w\007\]"

# set prompt
PS1+="\[$cyan\]\u "               # user
if [[ "${SSH_TTY}" ]]; then         # add host if connected via ssh
    PS1+="\[$white\]at \[$cyan\] \h "
fi 
PS1+="\[$white\]:: \w "             # working directory
PS1+="\[$red\]\$(get_git_branch)"   # git branch
PS1+="\n"                           # newline
PS1+="\[$reset\]$ "                 # '$' prompt
export PS1

